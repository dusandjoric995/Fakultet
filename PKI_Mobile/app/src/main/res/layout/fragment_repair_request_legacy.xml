<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TableLayout
        android:id="@+id/tlRRC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp">

        <TableRow
            android:paddingVertical="6dp">

            <TextView
                android:id="@+id/tvRRCDistrict"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="40dp"
                android:text="@string/rr_district"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvRRCDistrictI"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:background="@color/colorRowEven"
            android:paddingVertical="6dp">

            <TextView
                android:id="@+id/tvRRCAddress"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="40dp"
                android:text="@string/rr_address"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvRRCAddressI"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"/>
        </TableRow>

        <TableRow
            android:background="@color/colorRowEven"
            android:paddingVertical="6dp">

            <TextView
                android:id="@+id/tvRRCPrice"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="40dp"
                android:text="@string/rr_price"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvRRCPriceI"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="18sp" />
        </TableRow>

    </TableLayout>


    <LinearLayout
        android:id="@+id/rlRRCPayment"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/rlRRCDistance1"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:weightSum="10">

        <TextView
            android:id="@+id/tvRRCPaid"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center_vertical"
            android:text="@string/rr_paid"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRRCPaidI"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:paddingEnd="12dp"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btRRCPay"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button_accent"
            android:text="@string/rr_pay"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:drawableEnd="@drawable/ic_money"
            android:paddingEnd="4dp"
            android:paddingStart="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlRRCRateAndComment"
        android:layout_width="210dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/rlRRCDistance2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/btRRCRateCraftsman"
            android:layout_width="150dp"
            android:layout_height="47dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/button_gold"
            android:drawableRight="@drawable/ic_rate_star_white"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/rate_craftsman"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btRRCCommentCraftsman"
            android:layout_width="150dp"
            android:layout_height="47dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/button_primary"
            android:text="Comment Craftsman"
            android:textColor="@android:color/white"
            android:drawableRight="@drawable/ic_comment"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@id/tlRRC"
        android:layout_alignTop="@id/tlRRC"
        android:layout_alignBottom="@id/tlRRC"
        android:layout_alignEnd="@id/tlRRC"
        android:background="@drawable/table_border">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlRRCDistance1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@id/tlRRC"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/distancer">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlRRCDistance2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@id/rlRRCPayment"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/distancer">
    </RelativeLayout>


</RelativeLayout>