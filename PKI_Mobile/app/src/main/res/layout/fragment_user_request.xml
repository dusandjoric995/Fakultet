<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        android:gravity="center"
        android:weightSum="10">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/tlUserRequestsAll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9.5">

            <TableRow
                android:id="@+id/trURHeader"
                android:background="@color/colorPrimary">

                <ImageButton
                    android:id="@+id/btURAdditionalOptions"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:src="@android:drawable/ic_menu_more"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="27dp"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/ur_description"
                    android:textColor="@android:color/white"></TextView>

                <TextView
                    android:layout_width="80dp"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/ur_craftsman"
                    android:textColor="@android:color/white"></TextView>

                <TextView
                    android:layout_width="45dp"
                    android:layout_column="3"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/ur_date"
                    android:textColor="@android:color/white"></TextView>

                <TextView
                    android:layout_width="25dp"
                    android:layout_column="4"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/ur_status"
                    android:textColor="@android:color/white"></TextView>
            </TableRow>

            <ScrollView
                android:id="@+id/svUserRequests"
                android:layout_height="match_parent">

                <TableLayout
                    android:id="@+id/tlUserRequests"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"></TableLayout>
            </ScrollView>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="493dp"
        android:gravity="center"
        android:weightSum="10">

        <TextView
            android:id="@+id/tvUserRequests"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="9.5"
            android:textAlignment="center"
            android:textSize="28sp"
            android:textStyle="bold"
            android:text="@string/repair_requests"/>
    </LinearLayout>




</RelativeLayout>