<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:text="@string/client_colon"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvClientI"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvClientI" />

    <TextView
        android:id="@+id/tvClientI"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDistrict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/district_colon"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvDistrictI"
        app:layout_constraintStart_toStartOf="@+id/tvClient"
        app:layout_constraintTop_toTopOf="@+id/tvDistrictI" />

    <TextView
        android:id="@+id/tvDistrictI"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvClientI" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/address_colon"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvAddressI"
        app:layout_constraintStart_toStartOf="@+id/tvDistrict"
        app:layout_constraintTop_toTopOf="@+id/tvAddressI" />

    <TextView
        android:id="@+id/tvAddressI"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDistrictI" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/price_colon"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvAddress"
        app:layout_constraintTop_toTopOf="@+id/tvPriceI" />

    <TextView
        android:id="@+id/tvPriceI"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAddressI" />

    <Button
        android:id="@+id/btRefuse"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/button_accent"
        android:text="@string/refuse"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/btAccept"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btAccept" />

    <Button
        android:id="@+id/btAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_primary"
        android:text="@string/accept"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/etPrice"
        app:layout_constraintTop_toBottomOf="@+id/tvAddressI" />

    <EditText
        android:id="@+id/etPrice"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:hint="@string/price"
        android:inputType="numberDecimal"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/btAccept"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btAccept" />

    <RelativeLayout
        android:id="@+id/rlDistanceFooter"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>