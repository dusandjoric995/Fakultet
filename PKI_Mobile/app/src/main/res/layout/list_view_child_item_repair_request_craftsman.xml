<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:text="@string/client_colon"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvClientI"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvClientI" />

    <TextView
        android:id="@+id/tvClientI"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="10dp"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDistrict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/district_colon"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvDistrictI"
        app:layout_constraintStart_toStartOf="@+id/tvClient"
        app:layout_constraintTop_toTopOf="@+id/tvDistrictI" />

    <TextView
        android:id="@+id/tvDistrictI"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="8dp"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvClientI" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/address_colon"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvAddressI"
        app:layout_constraintStart_toStartOf="@+id/tvDistrict"
        app:layout_constraintTop_toTopOf="@+id/tvAddressI" />

    <TextView
        android:id="@+id/tvAddressI"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="8dp"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDistrictI" />

    <TextView
        android:id="@+id/tvPaymentMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/paying_method"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvPaymentMethodI"
        app:layout_constraintStart_toStartOf="@+id/tvAddress"
        app:layout_constraintTop_toTopOf="@+id/tvPaymentMethodI" />

    <TextView
        android:id="@+id/tvPaymentMethodI"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="8dp"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAddressI" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price_colon"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvPriceI"
        app:layout_constraintStart_toStartOf="@+id/tvPaymentMethod"
        app:layout_constraintTop_toTopOf="@+id/tvPriceI" />

    <TextView
        android:id="@+id/tvPriceI"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="8dp"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPaymentMethodI" />

    <TextView
        android:id="@+id/tvPaid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rr_paid"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/clPaidI"
        app:layout_constraintStart_toStartOf="@+id/tvPrice"
        app:layout_constraintTop_toTopOf="@+id/clPaidI" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clPaidI"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPriceI">

        <TextView
            android:id="@+id/tvPaidI"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btConfirmPayment"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/button_gold"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/confirm_payment"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clOffer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clPaidI">

        <Button
            android:id="@+id/btRefuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_accent"
            android:text="@string/refuse"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@+id/btAccept"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btAccept" />

        <Button
            android:id="@+id/btAccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_primary"
            android:text="@string/accept"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toStartOf="@+id/etPrice" />

        <EditText
            android:id="@+id/etPrice"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="@string/price"
            android:inputType="numberDecimal"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/btAccept"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btAccept" />

    </android.support.constraint.ConstraintLayout>



    <RelativeLayout
        android:id="@+id/rlDistancerFooter"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/clOffer"/>


</android.support.constraint.ConstraintLayout>