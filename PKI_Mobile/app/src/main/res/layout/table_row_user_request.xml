<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tlUR"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:id="@+id/trUR"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:clickable="true">

        <CheckBox
            android:id="@+id/cbURSelected"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvURDescription"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"></TextView>

        <TextView
            android:id="@+id/tvURCraftsman"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"></TextView>

        <TextView
            android:id="@+id/tvURDate"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"></TextView>

        <TextView
            android:id="@+id/tvURStatus"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"></TextView>
    </TableRow>

    <ScrollView
        android:id="@+id/svURDetails"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvRepairRequests"
                android:layout_height="44dp"
                android:layout_width="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textSize="28sp"
                android:textStyle="bold"
                android:text="@string/request_details"/>


            <LinearLayout
                android:id="@+id/llRepairRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="70dp"
                android:gravity="center"
                android:weightSum="10">

                <TableLayout
                    android:id="@+id/tlRepairRequest"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9.5">

                    <TableRow
                        android:background="@color/rowEven"
                        android:paddingVertical="6dp">

                        <TextView
                            android:id="@+id/tvRRClient"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="40dp"
                            android:text="@string/rr_client"
                            android:textSize="18sp"/>

                        <TextView
                            android:id="@+id/tvRRClientI"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:paddingVertical="6dp">

                        <TextView
                            android:id="@+id/tvRRCraftsman"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="40dp"
                            android:text="@string/rr_craftsman"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvRRCraftsmanI"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:background="@color/rowEven"
                        android:paddingVertical="6dp">

                        <TextView
                            android:id="@+id/tvRRDate"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="40dp"
                            android:text="@string/rr_date"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvRRDateI"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:paddingVertical="6dp">

                        <TextView
                            android:id="@+id/tvRRDistrict"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="40dp"
                            android:text="@string/rr_district"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvRRDistrictI"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:background="@color/rowEven"
                        android:paddingVertical="6dp">

                        <TextView
                            android:id="@+id/tvRRAddress"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="40dp"
                            android:text="@string/rr_address"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvRRAddressI"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textSize="18sp"/>
                    </TableRow>

                    <TableRow
                        android:paddingVertical="6dp">

                        <TextView
                            android:id="@+id/tvRRDescription"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="40dp"
                            android:text="@string/rr_description"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvRRDescriptionI"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:background="@color/rowEven"
                        android:paddingVertical="6dp">

                        <TextView
                            android:id="@+id/tvRRPrice"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="40dp"
                            android:text="@string/rr_price"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvRRPriceI"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:background="@color/rowOdd"
                        android:paddingVertical="6dp">

                        <TextView
                            android:id="@+id/tvRRStatus"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="40dp"
                            android:text="@string/rr_status"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvRRStatusI"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textSize="18sp" />
                    </TableRow>

                </TableLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/rlPayment"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/rlDistance1"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:weightSum="10">

                <TextView
                    android:id="@+id/tvRRPaid"
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_gravity="center_vertical"
                    android:text="@string/rr_paid"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvRRPaidI"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:paddingEnd="12dp"
                    android:layout_gravity="center_vertical"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btRRPay"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/button_accent"
                    android:text="@string/rr_pay"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:drawableEnd="@drawable/ic_money"
                    android:paddingEnd="4dp"
                    android:paddingStart="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlRRRateAndComment"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/rlDistance2"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="25dp">

                <Button
                    android:id="@+id/btRRRateCraftsman"
                    android:layout_width="150dp"
                    android:layout_height="47dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/button_gold"
                    android:drawableRight="@drawable/ic_rate_star_white"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="@string/rate_craftsman"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btRRCommentCraftsman"
                    android:layout_width="150dp"
                    android:layout_height="47dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/button_primary"
                    android:text="Comment Craftsman"
                    android:textColor="@android:color/white"
                    android:drawableRight="@drawable/ic_comment"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@id/llRepairRequest"
                android:layout_alignTop="@id/llRepairRequest"
                android:layout_alignBottom="@id/llRepairRequest"
                android:layout_alignEnd="@id/llRepairRequest"
                android:weightSum="10"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9.5"
                    android:background="@drawable/table_border">
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlDistance1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignBottom="@id/llRepairRequest"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="-25dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/distancer">
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlDistance2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignBottom="@id/rlPayment"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="-15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/distancer">
            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>